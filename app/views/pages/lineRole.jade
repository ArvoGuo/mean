//业务线-资源占用
//业务线-需求列表
extends ../layout
block content
    .container.col-sm-offset-1.col-md-10
        .row
            form.form-inline(role="form",method="GET",action="/admin/line/role")
                label.col-sm-2.col-sm-offset-2.control-label 输入业务线名称关键词
                .col-sm-8
                    input.form-control(style="width:400px",type="text",name="q")
                    button.btn.btn-default(type="submit") 搜索
            .btn-group
                button.btn.btn-default(type="button",data-role="0") PD
                button.btn.btn-default(type="button",data-role="1") 交互
                button.btn.btn-default(type="button",data-role="2") 视觉
                button.btn.btn-default(type="button",data-role="3") 前端
                button.btn.btn-default(type="button",data-role="4") 开发
                button.btn.btn-default(type="button",data-role="5") 测试
    .row.container.col-sm-offset-1.col-md-10(style="margin-top:30px")
    link(href="/libs/fullcalendar/fullcalendar.min.css",rel="stylesheet")
    script(src="/libs/fullcalendar/moment.min.js")
    script(src="/libs/fullcalendar/fullcalendar.min.js")
    script(src="/libs/fullcalendar/zh-cn.js")
    script(src="/js/allIssueCalendar.js")
