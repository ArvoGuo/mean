extends ../layout
block content
    .container.col-sm-offset-1.col-md-8
        .row
            form.form-horizontal(role="search",method="get",action="")
                label.col-sm-2.col-sm-offset-2.control-label 输入业务线名称
                .col-sm-8
                    input.form-control(type="text",name="q")
                    button.btn.btn-default(type="submit") 搜索
            .tabbable.view
                ul.nav.nav-tabs
                    li.active
                        a(href="#panel-1",data-toggle="tab") 我认领的
                    li
                        a(href="#panel-2",data-toggle="tab") 未认领的
                .tab-content(style="margin-top:10px")
                    .tab-pane.active(id="panel-1")
                        table.table.table-hover.table-bordered
                            thead
                                tr
                                    th 需求主题
                                    th 需求状态
                                    th 提醒
                                    th 修改
                            tbody
                            each issue in issues
                                tr(class="issue-id-#{issue._id}")
                                    td #{issue.name}
                                    td
                                        if issue.condition == "0"
                                            code 需求分析中
                                        if issue.condition == "1"
                                            code PRD整理中
                                        if issue.condition == "2"
                                            code 原型设计中
                                        if issue.condition == "3"
                                            code 视觉稿设计中
                                        if issue.condition == "4"
                                            code demo制作中
                                        if issue.condition == "5"
                                            code 前后端联调中
                                        if issue.condition == "6"
                                            code 测试中
                                        if issue.condition == "7"
                                            code 发布
                                    td
                                    td: a.btn.btn-success.btn-xs(target="_blank",href="/admin/issue/update/#{issue._id}") 修改
                    .tab-pane(id="panel-2")
                        table.table.table-hover.table-bordered
                            thead
                                tr
                                    th 需求主题
                                    th 需求状态
                                    th 提醒
                                    th 认领
                            tbody
                            each issue in issues
                                tr(class="issue-id-#{issue._id}")
                                    td #{issue.name}
                                    td
                                        if issue.condition == "0"
                                            code 需求分析中
                                        if issue.condition == "1"
                                            code PRD整理中
                                        if issue.condition == "2"
                                            code 原型设计中
                                        if issue.condition == "3"
                                            code 视觉稿设计中
                                        if issue.condition == "4"
                                            code demo制作中
                                        if issue.condition == "5"
                                            code 前后端联调中
                                        if issue.condition == "6"
                                            code 测试中
                                        if issue.condition == "7"
                                            code 发布
                                    td
                                    td: button.btn.btn-danger.btn-xs(type="button",data-id="#{issue._id}") 认领
    script(src="/js/allocate.js")





