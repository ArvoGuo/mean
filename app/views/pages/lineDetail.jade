extends ../layout

block content
    .container
        .row
            .alert.alert-success.alert-dismissible(role="alert")
                button.close(type="button",data-dismiss="alert")
                    span(aria-hidden="true") &times;
                    span.sr-only Close
                您已成功创建 #{line.name} 业务线！
            .col-md-6.col-md-offset-2
                dl.dl-horizontal
                    dt 业务名称:
                    dd #{line.name}
                    dt 创建时间:
                    dd #{moment(line.meta.updateAt).format('YYYY/MM/DD')}
                    dt 创建人:
                    dd #{line.creator}
                    dt 业务介绍:
                    dd #{line.desc}
                    dt 已创建的需求
                    dd
                        if(line.issues)
                            a #{line.issues}
                    dt 业务成员:
                    dd
                    dt
                    dd
                        a.btn.btn-success.btn-lg(href="/line/#{line._id}/issue/new",role="button") 在此业务线上创建需求



