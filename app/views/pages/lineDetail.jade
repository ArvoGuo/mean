extends ../layout

block content
    .container
        .row
            .col-md-7
                embed(src="#{line.flash}",allowFullScreen="true",quality="high",width="720",height="600",align="middle",type="application/x-shockwave-flash")
            .col-md-5
                dl.dl-horizontal
                    dt 电影名字
                    dd= line.title
                    dt 导演
                    dd= line.doctor
                    dt 国家
                    dd= line.country
                    dt 语言
                    dd= line.language
                    dt 上映年份
                    dd= line.year
                    dt 简介
                    dd= line.summary
